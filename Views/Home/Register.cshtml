@{
    ViewData["Title"] = "Register Page";
}

<div class="text-center">
    <p>Register here, need unique username, password</p>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label for="username" class="control-label">Enter Username: </label>
            <input type="text" id="username" class="form-control col-sm-4" />
        </div>
        <div class="form-group">
            <label for="password" class="control-label">Enter Password: </label>
            <input type="text" id="password" class="form-control col-sm-4" />
        </div>
        <div class="form-group">
            <label for="name" class="control-label">Enter Name: </label>
            <input type="text" id="name" class="form-control col-sm-4" />
        </div>
    </form>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Register</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>
</div>