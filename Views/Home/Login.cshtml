@model User
@{
    ViewData["Title"] = "Login Page";
}

<form asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username">Username: </label>
        <input asp-for="Username" class="form-control col-sm-4" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Password: </label>
        <input asp-for="Password" class="form-control col-sm-4" />
    </div>
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
</form>
<a asp-controller="Home" asp-action="Register" class="btn btn-secondary">Register</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Home</a>
