@model List<GamePlayed>
@{ 
    ViewData["Title"] = "In Game";
    Course selectedCourse = ViewBag.Course;
    Player loggedInPlayer = ViewBag.StartingPlayer;
}

<h2 class="text-center">@selectedCourse.CourseName</h2>
<table class="table table-bordered table-striped col-sm-6">
    <thead>
        <tr><th>Name</th><th>Score</th><th>Update Score</th></tr>
    </thead>
    <tbody>
        @foreach (GamePlayed game in Model)
        {
            <tr>
                <td>@game.Player.Name</td>
                <td>@game.Score</td>
                <td>
                    <a asp-controller="Player" asp-action="UpdateScore"
                        asp-route-id="@game.GamePlayedID" class="btn btn-primary">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>@ViewBag.Weather</p>
<a asp-controller="Player" asp-action="EndGame" asp-route-id="@loggedInPlayer.PlayerID" class="btn btn-primary">End Game</a>
<a asp-controller="Player" asp-action="BackToIndex" asp-route-id="@loggedInPlayer.PlayerID" class="btn btn-secondary">Finish Game Later</a>
<a asp-controller="Player" asp-action="DeleteGames" asp-route-id="@loggedInPlayer.PlayerID" class="btn btn-secondary">Cancel Game</a>