@model Player
@{ 
    ViewData["Title"] = "Edit Player";
}

<h2>@Model.Name</h2>

<form asp-action="EditPlayer" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group col-sm-6">
        <label asp-for="Name">Name: </label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group col-sm-6">
        <label asp-for="Username">Username: </label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group col-sm-6">
        <label asp-for="Password">Password: </label>
        <input asp-for="Password" class="form-control" />
    </div>

    <input type="hidden" asp-for="PlayerID" />

    <button type="submit" class="btn btn-primary">Commit Changes</button>
    <a asp-controller="Home" asp-action="PlayerList" class="btn btn-secondary">Cancel</a>
</form>