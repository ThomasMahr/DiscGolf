@{
    ViewData["Title"] = "Admin Page";
}

<!--Add Course List here too at some point-->
<h2>Course List</h2>

<h2>User List</h2>
<!--Should the admin just be able to add a user?-->
<table class="table table-bordered table-striped">
    <thead>
        <tr><th>Name</th><th>Username</th></tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Username</td>
                <td>
                    <a asp-controller="Home" asp-action="Delete"
                       asp-route-id="@user.UserID"
                       asp-route-slug="@user.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>