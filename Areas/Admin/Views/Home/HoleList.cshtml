@model IEnumerable<Hole>
@{
    ViewData["Title"] = "Hole List";
}

<h2>Hole List</h2>
<a asp-controller="Home" asp-action="AddHole" class="btn btn-primary">Add New Hole</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr><th>CourseName</th><th>Sequence Number</th><th>Par</th><th>Distance (ft)</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (Hole hole in Model)
        {
            <tr>
                <td>@hole.Course.CourseName</td>
                <td>@hole.SequenceNumber</td>
                <td>@hole.Par</td>
                <td>@hole.Distance</td>
                <td>
                    <a asp-controller="Home" asp-action="DeleteHole"
                       asp-route-id="@hole.HoleID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="Admin" asp-controller="Home" asp-action="index" class="btn btn-primary">Admin Home</a>